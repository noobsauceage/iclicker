<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scott.iClicker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/iclicker_app_name" >
        <activity
            android:name=".IClickerActivity"
            android:label="@string/iclicker_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MultiChoiceActivity"
            android:label="@string/multchoice_app_name" >
        </activity>
        <activity
            android:name=".OpenEndedActivity"
            android:label="@string/openended_app_name" >
        </activity>
        <activity
            android:name=".LectureNotesActivity"
            android:label="@string/lecturenotes_app_name" >
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/options_app_name" >
        </activity>
    </application>

</manifest>